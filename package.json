{
  "name": "sentinel-app",
  "version": "1.0.0",
  "description": "Sentinel project site",
  "repository": "https://github.com/sentinel-project/sentinel-app",
  "main": "index.js",
  "author": "Clinton Dreisbach",
  "license": "MIT",
  "devDependencies": {
    "backbone": "^1.2.1",
    "ejs-on-command": "^1.0.0",
    "http-server": "^0.8.0",
    "live-reload": "^1.1.0",
    "parallelshell": "latest",
    "watch": "latest",
    "webpack": "^1.11.0"
  },
  "scripts": {
    "clean": "rm -rf sentinel/static/*",
    "build:ejs:dev": "ejs-on-command -j dev.json -d sentinel/static/index.html frontend/ejs/index.ejs",
    "build:ejs:prod": "ejs-on-command -j prod.json -d sentinel/static/index.html frontend/ejs/index.ejs",
    "watch:ejs": "watch 'npm run build:ejs:dev' assets/ejs/",
    "build:data": "cp frontend/data/* sentinel/static/",
    "watch:data": "watch 'npm run build:data' data/",
    "build:static": "cp frontend/static/* sentinel/static/",
    "watch:static": "watch 'npm run build:static' assets/static/",
    "build:js:dev": "webpack -d",
    "build:js:prod": "webpack -p",
    "watch:js": "webpack --watch",
    "build:css": "cp -r frontend/css sentinel/static/",
    "watch:css": "watch 'npm run build:css' assets/css/",
    "build:dev": "npm run clean && npm run build:data && npm run build:static && npm run build:ejs:dev && npm run build:css && npm run build:js:dev",    
    "build:prod": "npm run clean && npm run build:data && npm run build:static && npm run build:ejs:prod && npm run build:css && npm run build:js:prod",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run watch:static' 'npm run watch:data'"
  },
  "dependencies": {
    "colorbrewer": "0.0.2",
    "d3": "^3.5.6",
    "queue-async": "^1.0.7",
    "underscore": "^1.8.3"
  }
}
